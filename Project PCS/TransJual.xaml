                <ComboBox Style="{StaticResource ComboBoxFlatStyle}" x:Name="jenis" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="160" Grid.Row="2" Grid.Column="1"/>
                <ComboBox Style="{StaticResource ComboBoxFlatStyle}" x:Name="produsen" HorizontalAlignment="Left" Margin="7,3,0,0" VerticalAlignment="Top" Width="150" Grid.Row="2" Grid.Column="3"/>
                <Button Content="Search" x:Name ="cari" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Height="55" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" FontSize="16" Margin="162,6,0,0" Click="Cari_Click" Grid.ColumnSpan="2">
