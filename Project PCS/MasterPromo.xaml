        <DataGrid RowStyle="{StaticResource RowStyleWithAlternation}" x:Name="dgvPromo" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="600" Margin="0,5,0,0" ColumnWidth="*" Grid.Row="3" CanUserAddRows="False" SelectionChanged="DgvProdusen_SelectionChanged" Grid.Column="1"/>

        <Grid Grid.Row="4" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="600*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
