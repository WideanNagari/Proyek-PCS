            <Button Content="Reset" x:Name ="resets" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="520,6.2,0,0" Width="70" Height="20" Grid.Column="1" Grid.Row="3" FontSize="12" Click="Resets_Click">
