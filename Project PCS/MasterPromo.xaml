            <Button Content="Delete" x:Name ="delete" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,6.2,0,0" Width="70" Height="20" Grid.Column="1" Grid.Row="3" FontSize="12" Click="Delete_Click">
