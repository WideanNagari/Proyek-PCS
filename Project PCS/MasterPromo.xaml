            <Label Content="Kode Promo :" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" FontSize="12" Margin="5,3.4,0,0"/>
            <Label Content="Nama Promo :" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" Margin="0,2.8,0,0" Grid.Row="2" Grid.Column="1" FontSize="12"/>
            <Label Content="Potongan :" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" Margin="19,0.2,0,0" Grid.Row="3" Grid.Column="1" FontSize="12"/>
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="id" HorizontalAlignment="Left" Height="18"  Margin="115,9.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="325" Grid.Row="1" Grid.Column="1" TextChanged="Id_TextChanged"/>
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="nama" HorizontalAlignment="Left" Height="18"  Margin="115,8,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="325" Grid.Row="2" Grid.Column="1"/>
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" x:Name="nominal" HorizontalAlignment="Left" Height="18"  Margin="115,6.2,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="325" Grid.Row="3" Grid.Column="1" TextChanged="Nominal_TextChanged"/>

            <Button Content="Insert" x:Name ="insert" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,5.8,0,0" Width="70" Height="20" Grid.Column="1" Grid.Row="2" FontSize="12" Click="Insert_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
