                                    <Setter Property="Background" Value="#005254"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Grid Grid.ColumnSpan="2" Margin="0,35,-0.2,0.4" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3.5*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Filter :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,0,0,0" Grid.Row="1" Grid.Column="0" FontSize="14"/>
                    <RadioButton x:Name="rnama" Content="Nama Aksesoris" HorizontalAlignment="Left" Margin="5,7,0,0" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" FontSize="12"/>
                    <RadioButton x:Name="rketerangan" Content="Keterangan Aksesoris" HorizontalAlignment="Left" Margin="5,7,0,0" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" FontSize="12"/>
