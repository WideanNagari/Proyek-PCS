<Window x:Class="Project_PCS.TransJualMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_PCS"
        mc:Ignorable="d"
        Title="TransJualMember" Height="450" 
        Width="1100" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgvCustomer" HorizontalAlignment="Left" Height="258" VerticalAlignment="Top" Width="640" Margin="10,127,0,0" ColumnWidth="*" Grid.Column="0" CanUserAddRows="False" SelectionChanged="DgvCustomer_SelectionChanged" Loaded="DgvCustomer_Loaded"/>
        <Label Content="Customer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" FontWeight="Bold" Grid.Row="0" Grid.Column="0" FontSize="16" Grid.ColumnSpan="3"/>
        <Label Content="Keyword :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,76,0,0" FontSize="14" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <TextBox x:Name="keyword" HorizontalAlignment="Left" Height="22"  Margin="103,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350"/>
        <Button Content="Cari" x:Name="cari2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" FontSize="16" Margin="500,48,0,0" Click="Cari2_Click"/>
        <Label Content="Filter :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,43,0,0" Grid.Column="0" FontSize="14"/>
        <RadioButton x:Name="rnama" Content="Nama Customer" HorizontalAlignment="Left" Margin="253,51,0,0" VerticalAlignment="Top" Grid.Row="0" FontSize="12"/>
        <RadioButton x:Name="rnotelp" Content="Nomer Telepon" HorizontalAlignment="Left" Margin="103,51,0,0" VerticalAlignment="Top" Grid.Row="0" FontSize="12"/>
        <Button Content="Back" x:Name ="back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="27" Grid.Row="0" FontSize="16" Margin="958,11,0,0" Click="Back_Click"/>
        <Button Content="Beli" x:Name ="beli" HorizontalAlignment="Left" VerticalAlignment="Top" Width="315" Height="24" FontSize="16" Margin="669,307,0,0" Click="Beli_Click"/>
        <Button Content="Hapus" x:Name ="hapus" HorizontalAlignment="Left" VerticalAlignment="Top" Width="315" Height="26" FontSize="16" Margin="669,353,0,0" Click="Hapus_Click"/>
        <Label Content="Total Belanja :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="669,240,0,0"  FontSize="14" FontWeight="Bold"/>
        <Label Content="Karyawan :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="762,79,0,0"  FontSize="14"/>
        <Label Content="Customer :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="669,121,0,0"  FontSize="14"/>
        <Label Content="Member :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="676,155,0,0" FontSize="14"/>
        <Label Content="Rp." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="786,242,0,0"  FontSize="20" FontWeight="Bold"/>
        <Label Content="0" x:Name="subtotal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="824,242,0,0"  FontSize="20" FontWeight="Bold" Width="160"/>
        <Label Content="abc" x:Name="namaKar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="851,79,0,0"  FontSize="14" Width="207"/>
        <Label Content="Tanggal :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="770,51,0,0"  FontSize="14"/>
        <Label Content="Customer -" x:Name="customer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="770,121,0,0"  FontSize="14" Width="205" Height="30"/>
        <Label Content="SYSDATE -" x:Name="tgl_hari" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="851,50,0,0" FontSize="14" Width="204" Height="29"/>
        <ComboBox x:Name="cbmember" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="770,156,0,0"  FontSize="14" Width="274" Height="30" SelectionChanged="Cbmember_SelectionChanged"/>
        <Label Content="DISKON: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="681,207,0,0"  FontSize="14" Width="77" Height="30"/>
        <TextBox x:Name="ket_diskon" IsReadOnly="True" IsEnabled="False" HorizontalAlignment="Left" Height="23"  Margin="770,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
        <Label Content="%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="808,207,0,0"  FontSize="14" Width="50" Height="30"/>
    </Grid>
</Window>
